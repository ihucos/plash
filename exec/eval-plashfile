#!/usr/bin/env python3
# usage: plash eval-file FILE

import sys
import os

file = sys.argv[1]
tokens = []
fstline = True
for line in open(file).readlines():
    if fstline and line.startswith('#!'):
        continue
    line = line.strip('\n')
    if line.startswith('-') and ' ' in line:
        tokens.extend(line.split(' '))
    else:
        tokens.append(line)
    fstline = False

os.execlp("plash", "plash", "eval", *tokens)
