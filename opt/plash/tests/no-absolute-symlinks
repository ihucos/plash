#/bin/sh

set -eux

cont=$(plash build -f 1 --invalidate-layer)
plash map blah "$cont"

: test that all symlinks are relative
DIR=$(plash data)
cd "$DIR"
plash sudo find .  -not -path '*/_data/root/*' -not -path './tmp' -not -path './tmp/*' -exec readlink {} \; | \
python3 -c 'import sys; assert all(l[0] == "." for l in sys.stdin.readlines()), "no all lines are a relative path"'
