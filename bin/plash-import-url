#!/usr/bin/env python3
#
# usage: plash-import-url URL NEW-IMAGE-ID
# Import an url as container

import sys
from os import execlp
from subprocess import check_call, check_output
from plashlib.utils import handle_help_flag, die_with_usage, CalledProcessError, catch_and_die

handle_help_flag()

try:
    url = sys.argv[1]
    image_id = sys.argv[2]
except IndexError:
    die_with_usage()

with catch_and_die([CalledProcessError]):
    if '--show-progress' in check_output(['wget', '--help']).decode():
        check_call(['wget', '-q', '--show-progress', url, '-O', image_id])
    else:
        check_call(['wget', url, '-O', image_id])

execlp('plash-import-tar', 'plash-import-tar', image_id, image_id)
