#!/usr/bin/env python3
#
# usage: plash-export-squashfs CONTAINER FILE
# Export a container as squashfs

from plashlib.utils import handle_help_flag, die_with_usage, handle_build_args, setup_namespace
from plashlib import ux
import os
import sys

setup_namespace()
handle_help_flag()
handle_build_args()
ux.assert_initialized()

try:
    container, out = sys.argv[1:3]
except ValueError:
    die_with_usage()

os.execlp('plash-with-mount', 'plash-with-mount', container, 'mksquashfs', '.',
          out)
