--from
ubuntu:eoan

--apt
gnupg
python3
fuse-overlayfs
gcc
make
curl

--layer

--run
#                                              PUT MASTER HERE
curl -Lf https://github.com/ihucos/plash/archive/dist.tar.gz | tar -xzC / --strip-components=1
cd /opt/plash/
make clean
make

--layer
--run
rm -rf /var/cache /var/lib/apt

--layer
--write-script /etc/profile.d/export_path.sh
export PATH

--layer
--run
mv /usr/bin/fuse-overlayfs /usr/bin/fuse-overlayfs-orig
--write-script /usr/bin/fuse-overlayfs
#!/bin/bash
{ exec /usr/bin/fuse-overlayfs-orig "$@" 2>&1 1>&3; exit=$? | grep -v = 1>&2; } 3>&1
exit $exit
